<div class="pull-right">
    @if (Request.IsAuthenticated)
    {
        <div class="pull-right">
            <div class="btn dropdown-toggle btn-success" data-toggle="dropdown">
                <i class="icon-user"></i>
                <span class="label label-success">
                    @User.Identity.Name
                </span><span class="caret"></span>
            </div>
            <br />
            <ul class="dropdown-menu">
                <li>
                    @Html.ActionLink("Settings", "Settings", "User")
                </li>
                <li class="divider"></li>
                <li>
                    @Html.ActionLink(/*"LogOff"*/ "Выйти", "Logout", "Account")
                </li>
            </ul>
        </div>
    }
    else
    {
        @Html.ActionLink(/*"LogIn"*/ "Войти", "Login", "Account", null, new { @class = "btn btn-primary" })                
    }
</div>


