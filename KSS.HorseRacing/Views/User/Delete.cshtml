@model KSS.HorseRacing.Models.UserDetailsModel

<div class="page-header"></div>
<div class="page-header">
    <h3>Are you sure you want to delete this?</h3>
</div>
<fieldset>
    <legend>User Details</legend>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.UserId)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserId)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Username)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Username)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.UserRoleName)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.UserRoleName)
    </div>
</fieldset>
@using (Html.BeginForm("DeleteUser", "User", FormMethod.Post))
{
    <p>
        @Html.HiddenFor(x => x.UserId)
        <div class="btn-group">
            <input type="submit" class="btn btn-danger" value="Delete" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
        </div>

    </p>
}
