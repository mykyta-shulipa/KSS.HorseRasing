@model KSS.HorseRacing.Models.LoginModel
@{
    ViewBag.Title = "Login";
}
@{
    Html.EnableClientValidation(true);
}

<div class="page-header"></div>
<div class="offset5 span5">
    @if (!string.IsNullOrWhiteSpace(Model.MessageToShowAbove))
    {
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <span>
                @Model.MessageToShowAbove
            </span>
        </div>
    }

    @using (Html.BeginForm(null, null, FormMethod.Post, new
    {
        @class = "form-horizontal well validation"
    }))
    {
        if (!ViewData.ModelState.IsValid)
        {
        <div class="row-fluid">
            @Html.ValidationSummary(false, null, new { @class = "alert alert-error" })
        </div>  
        }
        <div class="row-fluid">
            <h2 class="page-header">Login
            </h2>
            <p>
                If you already have a username and password, please login below.            
            </p>
            <br />
            <div id="control" class="control-group pull-right">
                @Html.LabelFor(x => x.Username, "Username", new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(x => x.Username)
                </div>
                <span class="help-block validation-message pull-right">
                    @Html.ValidationMessageFor(x => x.Username)
                </span>
            </div>
            <div class="control-group pull-right">
                @Html.LabelFor(x => x.Password, "Password", new { @class = "control-label" })
                <div class="controls">
                    @Html.EditorFor(x => x.Password)
                </div>
                <span class="help-block validation-message pull-right">
                    @Html.ValidationMessageFor(x => x.Password)
                </span>
            </div>
            <br />
        </div>
        <div class="row-fluid">
            <input type="submit" class="btn btn-large btn-primary pull-right" value="Login" />
        </div>
    }
</div>
