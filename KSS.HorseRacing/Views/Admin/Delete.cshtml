        @Html.HiddenFor(x => x.UserId)
        <div class="btn-group">
            <input type="submit" class="btn btn-danger" value="Удалить" />
            @Html.ActionLink(/*"Back to List"*/ "Вернуться к списку", "Index", null, new { @class = "btn" })
        </div>

    </p>
