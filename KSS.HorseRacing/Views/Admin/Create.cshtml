@model KSS.HorseRacing.Models.CreateUserViewModel

@{
    ViewBag.Title = "Create New User";
    ViewBag.Title = "Создать нового пользователя";
}
<div class="page-header"></div>
<div class="page-header">
    @ViewBag.Title
</div>
<div class="row">
    <div class="offset5 span4">
        <div class="well">
            @using (Html.BeginForm())
            {
                <div class="row-fluid">
                    @Html.DisplayNameFor(x => x.Username)
                </div>                      
                <div class="row-fluid">
                    @Html.EditorFor(x => x.Username)
                </div>
                <div class="row-fluid">
                    @Html.DisplayNameFor(x => x.SelectedRole)
                </div>
        
                <div class="row-fluid">
                    @Html.DropDownListFor(x => x.SelectedRole, Model.RolesForDropdown)
                </div>
                <div class="row-fluid">
                    <input type="submit" class="btn btn-success" value="Создать" />
                </div>
            }
        </div>
    </div>
</div>
