@model KSS.HorseRacing.Models.RacerCreateViewModel
@{
    ViewBag.Title = "Add new Racer";
    ViewBag.Title = "Добавить данные о новом гонщике";
}
<div class="page-header"></div>
<div class="page-header">
    <h4>@ViewBag.Title
    </h4>
</div>
<div class="row-fluid">
    <div class="row-fluid">
        <div class="offset4 span3 well">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)                
                <div class="row-fluid">
                    @*Select Horse:*@
                    Выберите лошадь:
                </div>
                <div class="row-fluid">
                    @Html.DropDownListFor(x => x.SelectedHorseId, Model.ListHorsesForDropDown, new { @class = "offset2 span8" })
                </div>
                <div class="row-fluid">
                    @*Select Jockey:*@
                    Выберите жокея:
                </div>
                <div class="row-fluid">                    
                    @Html.DropDownListFor(x => x.SelectedJockeyId, Model.ListJockeysForDropDown, new { @class = "offset2 span8" })
                </div>
                <div class="row-fluid">
                    @*Select Start Date:*@
                    Выберите дату начала совместной работы:
                </div>
                <div class="row-fluid">                    
                    <input type="text" class=" with-datepicker offset2 span8" id="StartDateTime" name="StartDateTime" value='@(DateTime.Now.Date.ToShortDateString().Replace('/', '-'))' />
                </div>
                <br />
                <br />
                <p>
                    <input type="submit" class="btn btn-primary offset3 span6 " value="Создать" />
                </p>
            }
        </div>
    </div>
    <div class="row-fluid">
        <div class="offset4 span3">
            @Html.ActionLink(/*"Back to List"*/ "Вернуться к списку", "Index", null, new { @class = "btn span12" })
        </div>
    </div>
</div>
@Html.Partial("PartialForDatePicker")