@model KSS.HorseRacing.Models.RacerCreateViewModel
@{
    ViewBag.Title = "Add new Racer";
}
<div class="page-header"></div>
<div class="page-header">
    <h4>Create New Racer
    </h4>
</div>
<div class="row-fluid">
    <div class="row-fluid">
        <div class="offset4 span3 well">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <div class="row-fluid">
                    Select Horse:
                    @Html.DropDownListFor(x => x.SelectedHorseId, Model.ListHorsesForDropDown, new {@class="offset2 span8"})
                </div>
                <div class="row-fluid">
                    Select Jockey:
                    @Html.DropDownListFor(x => x.SelectedJockeyId, Model.ListJockeysForDropDown, new {@class="offset2 span8"})
                </div>
                <br/>
                <br/>
                <p>
                    <input type="submit" class="btn btn-primary offset3 span6 " value="Create" />
                </p>
            }
        </div>
    </div>
    <div class="row-fluid">
        <div class="offset5 span3">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn" })
        </div>
    </div>
</div>


