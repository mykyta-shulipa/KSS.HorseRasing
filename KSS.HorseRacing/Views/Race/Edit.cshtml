@model KSS.HorseRacing.Models.RaceDetailsViewModel
@{
    ViewBag.Title = "Редактирование информации о заезде";
}
@Html.Partial("PartialPageHeader")

@using (Html.BeginForm())
{
    @Html.HiddenFor(x=>x.RaceId)
    <div class="row-fluid">
        <strong>
            @Html.DisplayNameFor(x => x.DateTimeOfRace)
        </strong>
    </div>
    <div class="row-fluid">
        @Html.DisplayFor(x => x.DateTimeOfRace)
    </div>
    <br />
    <div class="row-fluid">
        <strong>
            @Html.DisplayNameFor(x => x.NumberRaceInDay)
        </strong>
    </div>
    <div class="row-fluid">
        @Html.DisplayFor(x => x.NumberRaceInDay)
    </div>
    <br />

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>#
                </th>
                <th>Псевдоним жокея 
                </th>
                <th>Кличка лошади
                </th>
                <th>Номер в гонке
                </th>
                <th>Занятое место
                </th>
            </tr>
        </thead>
        <tbody>
            @Html.EditorFor(x => x.Participants)
        </tbody>
    </table>
    <div class="row-fluid">
        @Html.ActionLink(/*"Back to List"*/ "Вернуться к списку", "Index", null, new { @class = "btn pull-left" })
        <input type="submit" class="btn btn-primary pull-right" value="Сохранить изменения" />
    </div>    
}


