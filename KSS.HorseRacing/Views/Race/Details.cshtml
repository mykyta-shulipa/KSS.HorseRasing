@model KSS.HorseRacing.Models.RaceDetailsViewModel
@{
    ViewBag.Title = "Детали заезда";
}

@Html.Partial("PartialPageHeader")
<div class="row-fluid">
    <strong>
        @Html.DisplayNameFor(x => x.DateTimeOfRace)
    </strong>
</div>
<div class="row-fluid">
    @Html.DisplayFor(x => x.DateTimeOfRace)
</div>
<br />
<div class="row-fluid">
    <strong>
        @Html.DisplayNameFor(x => x.NumberRaceInDay)
    </strong>
</div>
<div class="row-fluid">
    @Html.DisplayFor(x => x.NumberRaceInDay)
</div>
<br />

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#
            </th>
            <th>Псевдоним жокея 
            </th>
            <th>Кличка лошади
            </th>
            <th>Номер в гонке
            </th>
            <th>Занятое место
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Participants)
        {
            <tr>
                <td>
                    @item.ParticipantId
                </td>
                <td>
                    @item.JockeyAlias
                </td>
                <td>
                    @item.HorseNickname
                </td>
                <td>
                    @item.NumberInRace
                </td>
                <td>
                    @item.PlaceInRace
                </td>
            </tr>
        }
    </tbody>
</table>
