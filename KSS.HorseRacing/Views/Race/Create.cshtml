@model KSS.HorseRacing.Models.RaceCreateViewModel
@{
    ViewBag.Title = "Добавить результаты гонки";
}
<div class="page-header"></div>
<div class="page-header">
    <h4>
        @ViewBag.Title
    </h4>
</div>

@using (Html.BeginForm())
{
    <div class="row-fluid">
        <div class="row-fluid">
            Дата проведения гонки
        </div>
        <div class="row-fluid">
            <input class="text-box single-line with-datepicker" id="DateTimeOfRace" name="DateTimeOfRace" type="text" value='@(DateTime.Now.Date.ToShortDateString().Replace('/', '-'))' />
        </div>
        <br />
        <div class="row-fluid">
            Номер гонки в этот день
        </div>
        <div class="row-fluid">
            @Html.EditorFor(x => x.NumberRaceInDay)
        </div>
        <br />
        <div class="row-fluid">
        </div>

        <input type="button" id="add-new-participant-button" class="btn btn-success" value="Добавить участника" />
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('.with-datepicker').datepicker({
            format: 'dd-mm-yyyy'
        });

        $("#add-new-participant-button").click(function () {
            alert(this);
        });
    });
</script>
